<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="330.0" prefWidth="526.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="com.example.pocitaniprumeruznamek.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label contentDisplay="CENTER" text="Jméno Studenta:">
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <font>
         <Font size="19.0" />
      </font>
   </Label>
   <ChoiceBox fx:id="studentName" prefWidth="150.0" />
   <Label text="Předmět:">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <ChoiceBox fx:id="subject" prefWidth="150.0" />
    <Button onAction="#onHelloButtonClick" text="Udělat Průměr Známek">
      <font>
         <Font size="18.0" />
      </font></Button>
   <TextField fx:id="markOutput">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </TextField>

    <Label fx:id="welcomeText" />
</VBox>
